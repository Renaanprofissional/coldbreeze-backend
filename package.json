{
  "name": "coldbreeze-backend",
  "version": "1.0.0",
  "description": "Backend do e-commerce Cold Breeze - Fastify + Prisma + TypeScript + Neon",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "seed": "tsx prisma/seed.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "fastify",
    "prisma",
    "typescript",
    "neon",
    "ecommerce"
  ],
  "author": "Renan.devbarros",
  "license": "MIT",
  "dependencies": {
    "@fastify/compress": "^8.1.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@prisma/client": "^6.16.3",
    "@types/stripe": "^8.0.416",
    "bcryptjs": "^3.0.2",
    "fastify": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "stripe": "^19.1.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.6.2",
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "prisma": "^6.16.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
